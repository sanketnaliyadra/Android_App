<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.activity.DetailActivity">


    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:background="#6750A4"
        android:gravity="center"
        android:paddingStart="16dp"
        android:paddingEnd="16dp">

        <ImageButton
            android:id="@+id/imageButtonBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:background="@android:color/transparent"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?android:attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_arrow_back"
            tools:ignore="ContentDescription"
            app:tint="@color/white" />

        <View
            android:layout_width="12dp"
            android:layout_height="match_parent" />

        <TextView
            android:ellipsize="end"
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:text="Product Detail"
            android:layout_weight="1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:lineHeight="24sp"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>


    <androidx.cardview.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="@dimen/_10sdp">

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_250sdp"
            android:layout_gravity="center"
            android:src="@drawable/bingo_game" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textStyle="bold"
        android:text="Bingo Game"
        android:textColor="@color/black"
        android:textSize="@dimen/_24ssp" />

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_10sdp"
        android:textStyle="normal"
        android:text="Kids bingo game that improve logic and Board game based on the popular game of Tambola/Bingo"
        android:textColor="@color/black"
        android:textSize="@dimen/_20ssp"
        android:layout_marginTop="@dimen/_10sdp"/>

    <RelativeLayout
        android:paddingVertical="@dimen/_6sdp"
        android:layout_marginTop="@dimen/_8sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:textStyle="bold"
            android:text="$51"
            android:layout_gravity="center"
            android:textColor="@color/black"
            android:textSize="@dimen/_20ssp"
           />

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_marginHorizontal="@dimen/_10sdp"
            android:layout_alignParentEnd="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/removeQuantity"
                style="@style/QuantityPickerButtonStyle"
                android:backgroundTint="#6750A4"
                android:text="@string/minus"
                android:textColor="@color/white" />

            <androidx.appcompat.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/_5sdp"
                android:text="Add"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                android:visibility="gone"
                tools:ignore="NestedWeights" />


            <EditText
                android:id="@+id/editQnt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="@dimen/_4sdp"
                android:background="@null"
                android:text="00"
                android:inputType="number"
                android:textColor="@android:color/black"
                android:textSize="16sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/addQuantity"
                style="@style/QuantityPickerButtonStyle"
                android:backgroundTint="#6750A4"
                android:text="@string/plus"
                android:textColor="@color/white" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </RelativeLayout>


    <androidx.cardview.widget.CardView
        tools:visibility="visible"
        android:visibility="gone"
        android:id="@+id/viewCartItem"
        app:cardCornerRadius="4dp"
        app:cardElevation="1dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/green"
            android:paddingHorizontal="@dimen/_6sdp"
            android:paddingVertical="@dimen/_3sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/cartItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_centerVertical="true"
                    android:id="@+id/item"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1 Item"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14ssp" />

                <View
                    android:layout_centerVertical="true"
                    android:layout_marginHorizontal="8dp"
                    android:id="@+id/view"
                    android:layout_toRightOf="@+id/item"
                    android:layout_width="2dp"
                    android:layout_height="20dp"
                    android:background="@color/white"
                    android:backgroundTint="@color/white" />

                <TextView
                    android:id="@+id/itemPrice"
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="$51"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12ssp" />

            </RelativeLayout>

            <TextView
                android:layout_below="@+id/cartItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Extra charges may apply"
                android:textColor="@color/white"
                android:textSize="@dimen/_7ssp" />

            <TextView
                android:id="@+id/viewCart"
                android:textColor="@color/white"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="View Cart"
                android:textStyle="bold"
                android:layout_alignParentEnd="true"
                android:textSize="@dimen/_14ssp" />

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>